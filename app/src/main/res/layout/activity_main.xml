<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textViewTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo:"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/spinnerTipo" />

    <Spinner
        android:id="@+id/spinnerTipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/textViewTipo"
        app:layout_constraintStart_toEndOf="@id/textViewTipo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/textViewDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalhe:"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerTipo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/spinnerDetalhe" />

    <Spinner
        android:id="@+id/spinnerDetalhe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/textViewDetalhe"
        app:layout_constraintStart_toEndOf="@id/textViewDetalhe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/textViewValorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor:"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerDetalhe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textViewValor" />

    <TextView
        android:id="@+id/textViewValor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:gravity="end"
        app:layout_constraintTop_toTopOf="@id/textViewValorLabel"
        app:layout_constraintStart_toEndOf="@id/textViewValorLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewDataLancamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Lançamento:"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewValor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/editTextDataLancamento" />

    <EditText
        android:id="@+id/editTextDataLancamento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        app:layout_constraintTop_toTopOf="@id/textViewDataLancamento"
        app:layout_constraintStart_toEndOf="@id/textViewDataLancamento"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/buttonLancar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lançar"
        app:layout_constraintTop_toBottomOf="@id/editTextDataLancamento"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonVerLancamentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver lançamentos"
        app:layout_constraintTop_toBottomOf="@id/buttonLancar"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/buttonSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saldo"
        app:layout_constraintTop_toBottomOf="@id/buttonVerLancamentos"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
